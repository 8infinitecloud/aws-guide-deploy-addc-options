# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "my-ad-project"
environment  = "dev"

# AD Connector Configuration
domain_name               = "example.local"
connector_size            = "Small"
service_account_username  = "svc-aws-connector"
service_account_password  = "MySecurePassword123!"
on_premises_dns_ips       = ["192.168.1.10", "192.168.1.11"]

# Monitoring Configuration
log_retention_days = 30
sns_topic_arn      = ""  # Optional: SNS topic for alarms

# VPN Configuration (Optional)
create_vpn_gateway       = false
customer_gateway_ip      = ""  # Public IP of your on-premises gateway
customer_gateway_bgp_asn = 65000
on_premises_cidrs        = ["192.168.0.0/16"]
